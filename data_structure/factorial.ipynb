   "source": [
    "def factorial(n):\n",
    "    # 탈출조건\n",
    "    if n <= 1:\n",
    "        return 1\n",
    "\n",
    "    return n*factorial(n-1)\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    n = 3\n",
    "    res = factorial(n)\n",
    "    print(\"The factorial of {} is {}\".format(n, res))"
   ]
